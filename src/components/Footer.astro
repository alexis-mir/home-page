---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer>
  <div class="social-links">
    <a href="https://www.linkedin.com/in/alexis-exequiel-miranda/" target="_blank" rel="noopener noreferrer"><i class="fab fa-linkedin"></i></a>
    <a href="https://github.com/alexis-mir" target="_blank" rel="noopener noreferrer"><i class="fab fa-github"></i></a>
  </div>
  <p>&copy; 2023 Alexis Miranda. {t('allRightsReserved')}</p>
</footer>

<style>
  footer {
    background-color: var(--primary-color);
    color: white;
    text-align: center;
    padding: 2rem;
  }
  .social-links {
    margin-bottom: 1rem;
  }
  .social-links a {
    color: white;
    font-size: 1.5rem;
    margin: 0 0.5rem;
    transition: color 0.3s ease;
  }
  .social-links a:hover {
    color: var(--secondary-color);
  }
</style>