---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={t('siteDescription')} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
		<script src="https://kit.fontawesome.com/ebb0961929.js" crossorigin="anonymous"></script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--primary-color: #d2691e;
		--secondary-color: #ffcc99;
		--text-color: #333333;
		--background-color: #fdfdfd;
	}
	html {
		font-family: 'Roboto', sans-serif;
		background-color: var(--background-color);
		color: var(--text-color);
	}
	body {
		margin: 0;
		padding: 0;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Fira Code', monospace;
	}
</style>